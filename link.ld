ENTRY(start)
SECTIONS
{
    . = 0x1000;         /* Начальный адрес ядра (вместо 0x10000 для совместимости) */
    .text : {
        *(.text)
        _etext = .;
    } :text = 0x90      /* Выравнивание и права RX (чтение, выполнение) */
    .data : {
        *(.data)
        _edata = .;
    } :data = 0x90      /* Права RW (чтение, запись) */
    .bss : {
        *(.bss)
        _end = .;
    } :bss = 0x90       /* Права RW */
}